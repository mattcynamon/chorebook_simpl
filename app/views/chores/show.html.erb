<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @chore.name %>
</p>

<p>
  <b>Points:</b>
  <%= @chore.points %>
</p>

<p>
  <b>Completed:</b>
  <%= @chore.completed %>
</p>

<p>
  <b>Child:</b>
  <%= @chore.child_id %>
</p>

<p>
  <b>Due date:</b>
  <%= @chore.due_date %>
</p>
<%= link_to 'Edit', edit_chore_path(@chore) %> |
<%= link_to 'Back', chores_path %>

<h2><%= @list.name %></h2>
<p><%= @list.description %></p>

<h3>Stuff to do</h3>
<ul>
	<% @list.tasks.incomplete.each do |task| %>
	<li><%= task.description %> - <%= button_to "Complete", complete_task_path(@list.id,task.id) %></li>
	<% end %>
</ul>

<h3>Stuff I've done</h3>
<ul id="completed">
	<% @list.tasks.completed.each do |task| %>
	<li><%= task.description %></li>
	<% end %>
</ul>

<hr />

<%= form_for [@list, @list.tasks.new] do |form| %>

<p><%= form.text_field :description %> <%= form.submit %></p>

<% end %>

<hr />
<%= link_to "Back to all lists", lists_url %>

